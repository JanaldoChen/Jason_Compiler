PROGRAM EvalFornula;
{ Calculates the result of a basic formula Illustrates the use of procedures in JASON }
	DECLARE
	INTEGER a;
	REAL b;
	PROCEDURE FindFormula;
		PARAMETERS
		INTEGER x;
		REAL y;
		BEGIN
			WHILE x ! 0 DO
				IF x < 0 THEN SET y = 10 - 4.5*x
						 ELSE SET y = 4.5*x + 10
				ENDIF;
				WRITE y;
				READ x;
			ENDWHILE
		END;
	{Main program}
	BEGIN
		READ a;
		CALL FindFormula(a , b);
		WRITE b
	END.
